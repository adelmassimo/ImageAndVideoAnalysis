for video_num = 2:10
    
    if(video_num < 10)
        path=strcat('../img/g015/person0',num2str(video_num));
    else
        path=strcat('../img/g015/person',num2str(video_num));
    end
    frame_names = dir(strcat(path,'/*.png')); %salvo qui tutti i frame
    
    %bg_frame = imread( strcat(path,'/frame00000.png') ); %assegno frame di backGround

    for frame_name = frame_names'

        %concateno 2 stringa: 1. Nome cartella del frame, 2. Nome frame
        path_to_frame = strcat(frame_name.folder,'/', frame_name.name);
        
        %lo leggo per avere l'immagine vera e propria
        frame = imread(path_to_frame);
        
        frame_n = medfilt2(imcomplement( frame(padding:365, padding_r:625) ), [20 20]);
        frame_n  = frame_n.*uint16(frame_n < 37000);
        
        frame_punto = uint16(frame_n == max(max(frame_n)));
        [row, col] = find(frame_punto);

        c_x = floor(mean(row));
        c_y = floor(mean(col));

        imshow( frame )
        hold on
        scatter(c_y+35, c_x+130, 'MarkerFaceColor',[0 .7 .7]);
        
        waitforbuttonpress
    end
    
end